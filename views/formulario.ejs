<body>
    <div class="container">
        <h1>Cadastro de Conteúdos</h1>
        <form action="" method="post"> <!--enctype="multipart/form-data"-->
            <label for="estilos">Estilo</label>
            <select name="estilos" id="">
                <option value="0">Selecione...</option>
                <option value="stile1">Estilo 1</option>
                <option value="stile2">Estilo 2</option>
                <option value="stile3">Estilo 3</option>
                <option value="stile4">Estilo 4</option>
                <option value="stile5">Estilo 5</option>
                <option value="stile6">Estilo 6</option>
            </select>
            <label for="imagem">Imagem:</label>
            <input type="file" name="imagem" id="">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="">
            <label for="texto">Texto:</label>
            <textarea style="resize: none;" name="texto" id="" cols="30" rows="10"></textarea>
            <input type="submit" value="Gravar">

        </form>
    </div>
